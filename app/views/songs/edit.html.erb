<h1>Edit Song</h1>
<%= form_for @song do |f| %>
  <%= f.label "title:" %>
  <%= f.text_field :title %> <br>
  <%= f.label "Artist Name:" %>
  <%= f.text_field :artist_name %> <br>
  <%= f.label "Released"%>
  <%= f.check_box :released %> <br>
  <%= f.label "Release Year:"%>
  <%= f.text_field :release_year %> <br>
  <%= f.label "Genre:"%>
  <%= f.text_field :genre %> <br>
  <%= f.submit%>
<% end %>

<br>
<%= link_to "Back", songs_path%>

 <% if flash[:errors] %>
  <div style='color: red' id="error_explanation">
    <h2>
      <%= pluralize(flash[:errors].count, "error") %>
      prohibited this song from being saved:
    </h2>
    <ul>
      <% flash[:errors].each do |error| %>
        <li> <%= error %></li>
      <% end %>    
    </ul>
  </div>
<% end %>